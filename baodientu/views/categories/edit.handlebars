<div class="card shadow h-100">
        <h5 class="card-header">
          Categories
        </h5>
  <div class="card-body">
    {{#if this.error }}
        <div class="alert alert-danger" role="alert">
            Invalid Categories.<a href="/categories" class="alert-link"> Back to list.</a>
        </div>
    {{else }}
      <div class="row">
          <div class="col-sm-6">
          <form action="/categories/update" method="POST">
            <div class="form-group">
            <label for="txtCatID">#</label>
             <input readonly type="text" class="form-control" id="txtCatID" name="CatID" value="{{this.category.CatID}}">
        </div>
            <div class="form-group">
            <label for="txtCatName">Categories Name</label>
             <input type="text" class="form-control" id="txtCatName" name="CatName"  placeholder="name" value="{{this.category.CatName}}">
        </div>
        <div class="d-flex justify-content-between">
          <a class="btn btn-outline-primary" href="/categories" role="button" title="Back">
            <i class="fa fa-backward" aria-hidden="true"></i>
            list
          </a>
          <button  type="submit" class="btn btn-success">
        <i class="fa fa-check" aria-hidden="true"></i>
            Save
         </button>
        </div>
        
        </form>
      </div>
      </div>
       {{/if }}
  </div>
</div>